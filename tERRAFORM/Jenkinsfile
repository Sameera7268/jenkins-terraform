pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir('tERRAFORM') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('tERRAFORM') {
                    withCredentials([file(credentialsId: 'terraform-dev-tfvars', variable: 'TFVARS_FILE')]) {
                        sh 'terraform plan -var-file=$TFVARS_FILE'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('tERRAFORM') {
                    withCredentials([file(credentialsId: 'terraform-dev-tfvars', variable: 'TFVARS_FILE')]) {
                        sh 'terraform apply -auto-approve -var-file=$TFVARS_FILE'
                    }
                }
            }
        }
    }
}
